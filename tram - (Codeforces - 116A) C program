#include <stdio.h>

int main()
{
    int n;
    scanf("%d",&n);
    
    int entry=0;
    int max=entry;
     for(int i=0;i<n;i++){
        int ai,bi;
        scanf("%d %d",&ai,&bi);
        entry=(entry-ai)+bi;
        if(entry>max){
            max=entry;
        }
     }
     printf("%d",max);
    
}
